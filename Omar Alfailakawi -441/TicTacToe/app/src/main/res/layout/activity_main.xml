<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCF876"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#8CCBBE"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#3797A4"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#8CCBBE"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#3797A4"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#8CCBBE"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#3797A4"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button6"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#8CCBBE"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#3797A4"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#8CCBBE"
            android:textSize="50sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/Turn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="#FFFFFF"
        android:backgroundTint="#E4E4E4"
        android:text="Tap A Square to Start!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/PlayAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#E4E4E4"
        android:text="@string/play_again" />

    <Button
        android:id="@+id/StartAsO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Start As O"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/StartAsX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-48dp"
        android:layout_marginStart="250dp"
        android:text="Start As X"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/tttt" />


</LinearLayout>